<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About_us"
    android:background="@color/white">
    <ImageView
        android:id="@id/new_s"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        android:layout_marginTop="20dp"/>
    <ImageView
        android:id="@+id/oz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:layout_below="@+id/new_s"
        android:src="@drawable/about_us"/>
<TextView
    android:id="@+id/zo"
    android:layout_below="@+id/help"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Пожалуйста , оцените приложение!"
    android:textSize="22dp"
    android:layout_centerHorizontal="true"
    android:textColor="@color/black"
    android:paddingTop="20dp"/>

    <Button
        android:id="@+id/help"
        android:background="@color/b"
        android:text="Связь с разработчиком"
        android:layout_width="372dp"
        android:layout_height="50dp"
        android:layout_below="@+id/oz"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:textSize="15dp"/>
    <RatingBar
        android:id="@+id/z"
        android:layout_below="@+id/zo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00831A1A"
        android:progressBackgroundTint="@color/a"
        android:progressTint="@color/b"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>